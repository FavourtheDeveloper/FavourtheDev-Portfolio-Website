{
    "compilerOptions": {
      "target": "es5",
      "lib": ["dom", "es6"],
      "allowJs": true, // Allows JavaScript files
      "jsx": "react",
      "outDir": "./build",
      "strict": false, // Enable strict mode for better type checking
      "esModuleInterop": true, // Allows interoperability between CommonJS and ES modules
      "skipLibCheck": true, // Skip type checking of declaration files
      "forceConsistentCasingInFileNames": true, // Ensure consistent file naming
      "noImplicitAny": false // You can set this to true to enforce type annotations
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.js"],
    "exclude": ["node_modules"]
  }
  